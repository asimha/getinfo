<div class = "group_header">
  <%= @group.name %>
</div>

<div class= "group_owner">
  Owner: <%= @user.email %>
</div>

<%= link_to "Create Post", new_group_post_path(@group.id), class: 'myButton' %>

<div class="read_post">
	<% @posts.each do |post| %>
		<%= render partial: 'posts/post', locals: {post: post, group: @group} %>
	<% end %>
</div>

