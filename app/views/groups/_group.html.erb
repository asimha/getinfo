<div class="box" >
	<% if current_user.following?(group) %>
		
		<h2><%= link_to group.name, group_path(group)  %></h2>	
		<%= link_to "Unfollow", unfollow_group_path(group) if current_user.id != group.user_id %>
		
		<% else %>
		
		<h2><%= group.name %></h2>
		<%= link_to "Follow", follow_group_path(group) if current_user.id != group.user_id %>
	
	<% end %>
</div>
